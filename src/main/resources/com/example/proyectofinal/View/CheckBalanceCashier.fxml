<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proyectofinal.Controllers.CheckBalanceCashierController">
    <children>
        <AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #468BB0;">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" layoutX="186.0" layoutY="22.0" text="Check Balance" textFill="#efefef">
                    <font>
                        <Font name="Baskerville Old Face" size="38.0" />
                    </font>
                </Label>
                <Label alignment="CENTER" contentDisplay="CENTER" layoutX="194.0" layoutY="102.0" text="The number account" textFill="#efefef">
                    <font>
                        <Font name="Bell MT" size="25.0" />
                    </font>
                </Label>
                <Button fx:id="btnCheckBalance" alignment="CENTER" layoutX="266.0" layoutY="200.0" mnemonicParsing="false" onAction="#checkBalance" style="-fx-background-color: #196991; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: white;" text="Check" textFill="WHITE">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
                <Label alignment="CENTER" contentDisplay="CENTER" layoutX="212.0" layoutY="251.0" text="Avaiable balance:" textFill="#efefef">
                    <font>
                        <Font name="Bell MT" size="25.0" />
                    </font>
                </Label>
                <Label fx:id="lblBalance" alignment="CENTER" contentDisplay="CENTER" layoutX="267.0" layoutY="299.0" text="0.00" textFill="#efefef">
                    <font>
                        <Font name="Baskerville Old Face" size="38.0" />
                    </font>
                </Label>
            <TextField fx:id="txtAccountNumber" layoutX="197.0" layoutY="155.0" prefHeight="26.0" prefWidth="212.0" promptText="Enter the number account" />
            </children>
        </AnchorPane>
    </children>
</VBox>
