<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectofinal.Controllers.MovementViewController"
            style="-fx-background-color: #468BB0;">

    <!-- TOP -->
    <top>
        <HBox spacing="10" alignment="CENTER">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Label text="Movement history" textFill="WHITE"
                   style="-fx-font-size: 41px; -fx-font-weight: bold; -fx-font-family: 'System';"/>
        </HBox>
    </top>

    <!-- CENTER -->
    <center>
        <VBox spacing="15">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Fila de búsqueda -->
            <HBox spacing="15">

                <VBox spacing="5">
                    <Label text="ID Client:" textFill="WHITE"
                           style="-fx-font-family: 'Arial Black'; -fx-font-size: 15px;"/>
                    <TextField fx:id="txtClientId" promptText="Enter client ID"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Account number:" textFill="WHITE"
                           style="-fx-font-family: 'Arial Black'; -fx-font-size: 15px;"/>
                    <TextField fx:id="txtAccountNumber" promptText="BUQ-00000000"/>
                </VBox>

                <!-- Botón Search -->
                <Button text="Search" onAction="#onSearch"
                        style="-fx-background-color: #196991; -fx-background-radius: 20;
                               -fx-border-color: white; -fx-border-radius: 20; -fx-text-fill: WHITE;
                               -fx-font-family: 'Berlin Sans FB'; -fx-font-size: 16px;"
                        prefHeight="40" prefWidth="90"/>

                <!-- Botón Back -->
                <Button fx:id="btnBack" text="Back" onAction="#onBack"
                        style="-fx-background-color: #196991; -fx-background-radius: 20;
                               -fx-border-color: white; -fx-border-radius: 20; -fx-text-fill: WHITE;
                               -fx-font-family: 'Berlin Sans FB'; -fx-font-size: 16px;"
                        prefHeight="40" prefWidth="90"/>

            </HBox>

            <!-- Tabla -->
            <TableView fx:id="tblMovements" prefHeight="400"
                       style="-fx-background-color: white;">
                <columns>
                    <TableColumn fx:id="colDate" prefWidth="150" text="Date"/>
                    <TableColumn fx:id="colType" prefWidth="150" text="Type"/>
                    <TableColumn fx:id="colRelated" prefWidth="200" text="Related Account"/>
                    <TableColumn fx:id="colAmount" prefWidth="120" text="Amount"/>
                </columns>
            </TableView>

        </VBox>
    </center>

</BorderPane>
