<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.proyectofinal.Controllers.MovementViewController">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Button text="âŸµ Back" fx:id="btnBack" onAction="#onBack"/>
            <Label text="Movement history" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <HBox spacing="15">

                <VBox spacing="5">
                    <Label text="ID Client:"/>
                    <TextField fx:id="txtClientId" promptText="Enter client ID"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Account number:"/>
                    <TextField fx:id="txtAccountNumber" promptText="BUQ-00000000"/>
                </VBox>

                <Button text="Search" onAction="#onSearch"/>

            </HBox>

            <TableView fx:id="tblMovements" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colDate" text="Date" prefWidth="150"/>
                    <TableColumn fx:id="colType" text="Type" prefWidth="150"/>
                    <TableColumn fx:id="colRelated" text="Related Account" prefWidth="200"/>
                    <TableColumn fx:id="colAmount" text="Amount" prefWidth="120"/>
                </columns>
            </TableView>

        </VBox>
    </center>

</BorderPane>
